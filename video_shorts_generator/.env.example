# PostgreSQL database URL (self-hosted or managed)
DATABASE_URL=postgresql://postgres:<password>@localhost:5432/postgres?sslmode=require
ADMIN_PANEL_USERNAME=admin
ADMIN_PANEL_PASSWORD=change_this_strong_password
ADMIN_SESSION_TTL_HOURS=12

# Recommended for Railway: Brevo Email API (HTTPS)
BREVO_API_KEY=xkeysib-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
BREVO_FROM_EMAIL=you@yourdomain.com
BREVO_FROM_NAME=ClipMint

# Alternative: Resend Email API (HTTPS)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM=ClipMint <onboarding@resend.dev>

# SMTP for OTP mail delivery
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=you@example.com
SMTP_USE_TLS=true
